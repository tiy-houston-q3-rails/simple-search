<h1>Listing completed_assignments</h1>


<div class="well">

  <%= form_tag completed_assignments_path, method: :get do %>
    <div class="form-group">
      <label class="form-label">Select Assignment</label>

      <%= select_tag 'assignment_id', options_from_collection_for_select(Assignment.all, 'id', 'title', params[:assignment_id].to_i), prompt: "Please Select", class: "form-control" %>

    </div>
    <div class="form-group">
      <label class="form-label">Search by Name</label>
      <%= text_field_tag :name, params[:name], class: "form-control"%>

    </div>
    <div class="form-group">
      <input type="submit" class="btn btn-primary" value="Search"/>
    </div>
  <% end %>

</div>



<table class="table table-striped">
  <thead>
    <tr>
      <th>User</th>
      <th>Assignment</th>
      <th>On time</th>
      <th>Github url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @completed_assignments.each do |completed_assignment| %>
      <tr>
        <td><%= completed_assignment.user.name %></td>
        <td><%= completed_assignment.assignment.title %></td>
        <td><%= completed_assignment.on_time %></td>
        <td><%= completed_assignment.github_url %></td>
        <td><%= link_to 'Show', completed_assignment %></td>
        <td><%= link_to 'Edit', edit_completed_assignment_path(completed_assignment) %></td>
        <td><%= link_to 'Destroy', completed_assignment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Completed assignment', new_completed_assignment_path %>
